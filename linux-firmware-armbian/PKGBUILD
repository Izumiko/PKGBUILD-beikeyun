# PKGBUILD Maintainer: Izumiko <yosoro@outlook.com>

_debver=19.11.3.342
_imagename="armbian-firmware_${_debver}_all.deb"

pkgdesc="Linux firmware from armbian."
pkgname=linux-firmware-armbian
pkgver=${_debver}
pkgrel=1
arch=('any')
url="https://beta.armbian.com/pool/main/a/armbian-firmware/"
license=('GPL2')
options=('!strip')
provides=("linux-firmware=${pkgver}")
conflicts=('linux-firmware')
source=("https://beta.armbian.com/pool/main/a/armbian-firmware/${_imagename}")
sha256sums=('d9aa2884e73fa4de363ecb2e5536353204fb8269aafb1484b41c79734fcfa2f0')
noextract=("${_imagename}")


prepare() {
  cd "${srcdir}"

  # extract the prebuilt kernel files
  ar xf "${_imagename}"
  tar -xf data.tar.xz
}

package() {
  mkdir -p "${pkgdir}/usr"
  cp -r "${srcdir}/lib" "${pkgdir}/usr/"

}
